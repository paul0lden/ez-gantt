{
  "hooks": {
    "before:bump": "npm test && npm run format",
    "after:bump": "sed -i '' 's/VERSION_PLACEHOLDER/${version}/g' ./documentation/path/to/version/file",
    "after:release": "vercel --prod --cwd ./documentation",
    "before:git:release": "echo 'Please enter a custom description for this release:' && read description && export DESCRIPTION=$description"
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "ðŸŽ‰ Release v${version} - ${DESCRIPTION}\n\nRecent changes:\n${latestTagCommitLog}",
    "push": true,
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version} - Major Updates! ðŸŽˆ",
    "releaseNotes": "auto"
  }
}
